---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
import { Icons } from "./Icons";
import ThemeToggle from "./ThemeToggle";

interface Props {
  mainPage?: boolean;
}

const { mainPage: mainPage } = Astro.props;
---

<header class="flex gap-3 w-screen">
  <nav
    class="md:grid grid-cols-2 w-full m-0 p-5 bg-background/75 fixed border-b border-b-border backdrop-blur-2xl transition-all"
  >
    <div class="flex gap-3 items-center">
      {
        !mainPage && (
          <>
            <a onclick="window.history.back()" class="cursor-pointer">
              <Icons.back />
            </a>
            <a
              href="/personal-homepage/"
              class="font-bold text-2xl no-underline"
            >
              {SITE_TITLE}
            </a>
          </>
        )
      }
    </div>
    <div id="nav-buttons" class="hidden md:flex justify-end items-center gap-3">
      {
        !mainPage && (
          <>
            <HeaderLink
              href="https://www.xing.com/profile/Malek_Hamza"
              target="_blank"
            >
              <Icons.xing />
            </HeaderLink>
            <HeaderLink
              href="https://www.linkedin.com/in/malek-hamza-98254a248"
              target="_blank"
            >
              <Icons.linkedIn />
            </HeaderLink>
            <HeaderLink href="https://github.com/mlhmz" target="_blank">
              <Icons.github />
            </HeaderLink>
          </>
        )
      }
      <ThemeToggle client:load />
    </div>
  </nav>
</header>
