---
import About from "../components/About.mdx";
import Experience from "../components/Experience.mdx";
import { Icons } from "../components/Icons";
import IntroductionCard from "../components/IntroductionCard.astro";
import ProjectList from "../components/ProjectList.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout
  title={SITE_TITLE}
  description={SITE_DESCRIPTION}
  mainPage
>
  <main class="flex flex-col gap-5">
    <IntroductionCard />
    <hr />
    <div id="about" class="flex flex-col gap-2">
      <h1 class="text-2xl font-bold">About me</h1>
      <About />
    </div>
    <hr />
    <div id="experience">
      <h1 class="text-2xl font-bold">Experience</h1>
      <h3 class="font-bold text-muted-foreground">Here is a list of technologies i worked a lot with:</h3>
      <Experience />
    </div>
    <hr/>
    <div id="projects" class="flex flex-col gap-2">
      <div class="flex gap-3 items-center">
        <h1 class="text-2xl font-bold">Projects</h1>
        <a href="/personal-homepage/rss" title="RSS-Feed"><Icons.rss /></a>
      </div>
      <ProjectList />
    </div>
  </main>
</BaseLayout>
