---
import IntroductionCard from "../components/IntroductionCard.astro";
import ProjectList from "../components/ProjectList.astro";
import Separator from "../components/Separator.astro";
import StringTagList from "../components/StringTagList.astro";
import { SITE_DESCRIPTION, SITE_TITLE, TECHNOLOGIES } from "../consts";
import About from "../content/main/About.mdx";
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title={SITE_TITLE} description={SITE_DESCRIPTION} mainPage>
  <main class="flex flex-col gap-5">
    <IntroductionCard />
    <Separator />
    <div id="about" class="flex flex-col gap-2">
      <h1 class="text-2xl font-bold">About me</h1>
      <About />
    </div>
    <Separator />
    <div id="experience" class="flex flex-col gap-2">
      <h1 class="text-2xl font-bold">Experience</h1>
      <p class="text-muted-foreground">A list of technologies i worked a lot with</p>
      <StringTagList technologies={TECHNOLOGIES} />
    </div>
    <Separator />
    <div id="projects" class="flex flex-col gap-2">
      <h1 class="text-2xl font-bold">Portfolio</h1>
      <p class="text-muted-foreground">Projects that i made in my freetime or in school</p>
      <ProjectList />
    </div>
  </main>
</BaseLayout>
