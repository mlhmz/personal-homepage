---
import BaseLayout from "../layouts/BaseLayout.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import { Icons } from "../components/Icons";
---

<BaseLayout
  title={SITE_TITLE}
  description={SITE_DESCRIPTION}
  contactDeactivated
>
  <main class="flex gap-5 justify-center">
    <div class="flex items-center">
      <img
        class="rounded-full"
        src="https://profile-images.xing.com/images/d9afdeb77be0729aa6ae5391f2112782-1/malek-hamza.256x256.jpg"
        alt="A picture of me (Malek Hamza) from my XING"
        class="w-[256px] h-[256px]"
      />
    </div>
    <div class="flex flex-col gap-2 justify-center">
      <h1 class="text-4xl font-black">Malek Hamza</h1>
      <h2 class="text-1xl">
        Software developer, based in <a class="underline" target="_blank" rel="noopener" href="https://www.openstreetmap.org/search?query=Bremen%20Deutschland">Bremen, Germany</a>, interested in new technologies ðŸš€
      </h2>
      <div class="flex gap-3">
        <a href="https://www.xing.com/profile/Malek_Hamza" target="_blank">
          <Icons.xing aria-label="My GitHub Profile"/>
        </a>
        <a
          href="https://www.linkedin.com/in/malek-hamza-98254a248"
          target="_blank"
        >
          <Icons.linkedIn aria-label="My GitHub Profile"/>
        </a>
        <a href="https://github.com/mlhmz" target="_blank">
          <Icons.github aria-label="My GitHub Profile" />
        </a>
      </div>
    </div>
  </main>
</BaseLayout>
